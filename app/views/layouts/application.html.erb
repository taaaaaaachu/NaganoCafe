<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCafe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/30f9642506.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg p-5 bg-light">
        <div class="container-fluid">
          <a class="navbar-brand p-3" href="/">NaganoCake</a>

          </button>

            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", customers_my_page_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート",  cart_items_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete , class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_root_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧",  admin_genres_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete , class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録",  new_customer_registration_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, method: :get, class: 'nav-link btn btn-outline-dark m-3' %>
                </li>
              <% end %>
            </ul>

        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-light text-white p-5 pb-4">

    </footer>
  </body>
</html>
