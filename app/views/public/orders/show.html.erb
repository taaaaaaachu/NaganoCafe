<div class="container">
  <h3 class="gray mt-5">注文履歴詳細</h2>
  <div class="row">
    <div class="col-7">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-active">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="table-active">配送先</td>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="table-active">支払い方法</td>
          <td><%= @order.payment_method_i18n %> </td>
        </tr>
        <tr>
          <td class="table-active">ステータス</td>
          <td><%= @order.statusinteger %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-active">商品合計</td>
          <td><%= @order.total_payment - @order.shipping_cost %> </td>
        </tr>
        <tr>
          <td class="table-active">配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class="table-active">ご請求額</td>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h4>注文内容</h4>
    <table class="table table-bordered">
      <thead>
        <tr class="table-active">
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>