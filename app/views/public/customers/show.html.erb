<div class="container">
  <h3 class="gray mt-5">マイページ</h2>
  <div class="row mt-3 mb-3">
    <h4>登録情報</h4>
    <%= link_to "編集する", customers_information_edit_path, method: :get, class: "btn btn-success ml-5" %>
  </div>

  <div class="row">
    <table class="table table-bordered col-7">
      <tbody>
        <tr>
          <td class="table-active", style="width: 30%">氏名</td>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %> </td>

        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>

        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.telephone_number %></td>

        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>

      </tbody>
    </table>
  </div>
  <div class="row mt-5">
    <h2 class="col-2">配送先</h2>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>

  <div class="row mt-3">
    <h2 class="col-2">注文履歴</h2>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>



</div>