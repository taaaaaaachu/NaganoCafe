 <%= form_with model: @address do |f| %>
  <form>
    宛名<%= f.text_field :name, autofocus: true, id:"name", placeholder:"宛名"%>
    郵便番号<%= f.text_field :postal_code, id:"postal_code", placeholder:"郵便番号"%>
    住所<%= f.text_field :address, id:"address", placeholder:"住所"%>

    <%= f.submit "変更を保存" %>
  </form>
  <% end %>

<% @addresses.each do |address| %>
郵便番号<%= address.postal_code %>
住所<%= address.address %>
宛名<%= address.name %>
<%= link_to "編集する", edit_address_path(address.id) %>
<%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: "【確認】削除してもよろしいですか？" } %>
<br>
<% end %>