<div class="container">

  <h3 class="gray mt-5">新規会員登録</h2>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row mb-3 align-items-center">
        <div class="col-2">名前</div>
        <div class="col-1 text-right">(姓)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :first_name %>-->
          <%= f.text_field :first_name,autofocus: true, class: "form-control" %>
        </div>
        <div class="col-1 text-right">(名)</div>

        <div class="field p-2 col-4">
          <!--<%= f.label :last_name %>-->
          <%= f.text_field :last_name,  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-2">フリガナ</div>
        <div class="col-1 text-right">(セイ)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :first_name_kana %><br>-->
          <%= f.text_field :first_name_kana,  class: "form-control" %>
        </div>
        <div class="col-1 text-right">(メイ)</div>

        <div class="field p-2 col-4">
          <!--<%= f.label :last_name_kana %><br>-->
          <%= f.text_field :last_name_kana,  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">メールアドレス</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :email %><br />-->
          <%= f.email_field :email, autocomplete: "email",  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">郵便番号(ハイフン無し)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :postal_code %><br>-->
          <%= f.text_field :postal_code,  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">住所</div>
        <div class="field p-2 col-9">
          <!--<%= f.label :address %><br>-->
          <%= f.text_field :address,  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">電話番号(ハイフン無し)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :telephone_number %><br>-->
          <%= f.text_field :telephone_number,  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">パスワード(<%= @minimum_password_length %>文字以上)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :password %>-->
          <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3">パスワード(確認用)</div>
        <div class="field p-2 col-4">
          <!--<%= f.label :password_confirmation %><br />-->
          <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-3"></div>
        <div class="actions p-2 col-9">

          <%= f.submit "新規登録", class: "btn btn-lg btn-success col-4" %>
        </div>
      </div>

    <% end %>


  <%= render "public/shared/links" %>

</div>