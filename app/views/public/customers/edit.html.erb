<div class="container-field">
  <%= form_with model: @customer, url:  '/customers/information' do |f| %>
  <form>
    氏名<%= f.text_field :first_name, autofocus: true, id:"first_name", placeholder:"名字"%><%= f.text_field :last_name, id:"last_name", placeholder:"名前"%>
    フリガナ<%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", placeholder:"名字カナ"%><%= f.text_field :last_name_kana, id:"last_name_kana", placeholder:"名前カナ"%>
    郵便番号<%= f.text_field :postal_code, id:"postal_code", placeholder:"郵便番号"%>
    住所<%= f.text_field :address, id:"address", placeholder:"住所"%>
    電話番号<%= f.text_field :telephone_number, id:"telephone_number", placeholder:"電話番号"%>
    メールアドレス<%= f.text_field :email, id:"email", placeholder:"メールアドレス"%>
    <%= f.submit "変更を保存" %>
  </form>
  <% end %>
  <%= link_to "退会する",  customers_unsubscribe_path %>
</div>